<main class="container">
<p id="notice"><%= notice %></p>

<h1 class="text-center"><%= @event.title %></h1>

<div class="card my-5">
  <div class="card-header">
      <strong>Admin. mail : </strong><%= @admin.email %>
  <!--  <%= link_to 'Voir profil', user_path(@admin.id) %>  sortir également la première ligne de la methode show dans le controleur-->
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Start date : </strong><%= @event.start_date.strftime('%d/%m/%Y à %H:%M') %></li>
    <li class="list-group-item"><strong>End date: </strong><%= @event.end_date.strftime('%d/%m/%Y à %H:%M') %></li>
    <li class="list-group-item"><strong>Price : </strong><%= @event.price %> €</li>
    <li class="list-group-item"><strong>Location : </strong><%= @event.location %></li>
    <li class="list-group-item"><strong>Description : </strong><%= @event.description %></li>
  </ul>
</div>

<% if user_signed_in? && current_user.id == @admin.id %>
  <%= link_to 'Edit', edit_event_path(@event), class:"btn btn-success" %> 
  <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
<% end %>

<%= link_to 'Home', events_path, class:"btn btn-primary" %>
</main>